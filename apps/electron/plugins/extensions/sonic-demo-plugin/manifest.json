{
  "manifest_version": 3,
  "name": "Sonic Music Demo Plugin",
  "version": "1.0.0",
  "description": "一个简单的 Sonic Music 演示插件，展示插件系统的基本功能",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Sonic Demo Plugin"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ]
}
